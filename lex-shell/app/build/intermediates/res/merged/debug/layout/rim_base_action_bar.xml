<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    style="@style/rim_title"
    android:layout_width="fill_parent"
    android:layout_height="50dp">

    <!-- 标题栏左侧功能区，包括返回箭头和标题文字 -->
    <RelativeLayout
        tools:ignore="UseCompoundDrawables"
        android:id="@+id/title_left_imgzone2"
        style="@style/rim_titlebar_left_imgzone2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:paddingRight="7dp">

        <ImageView
            android:id="@+id/title_left_imgzone2_img"
            style="@style/rim_titlebar_left_imgzone2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/title_left_imgzone2_notify"
            style="@style/rim_titlebar_left_imgzone2_notify"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/title_left_imgzone2_img"
            android:duplicateParentState="true"/>
    </RelativeLayout>

    <!-- 标题栏左侧关闭文案按钮 -->
    <LinearLayout
        android:id="@+id/title_close"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/title_left_imgzone2"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rim_base_action_bar_text_close"
            android:id="@+id/rim_titlebar_left_imgzone2_close"
            style="@style/rim_titlebar_left_imgzone2_notify"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="@style/rim_titlebar_left_close_img"/>
    </LinearLayout>

    <!-- 标题栏中部文字标题 -->
    <LinearLayout
        android:id="@+id/title_center_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_center_text"
            style="@style/rim_titlebar_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/title_center_safe_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/safe_icon"
                style="@style/title_center_safe_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/title_center_safe_tip"
                style="@style/rim_titlebar_center_safe_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="160dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 刷新按钮右侧点击响应区域(ImageView+TextView)，须处理点击事件 -->

    <LinearLayout
        style="@style/rim_titlebar_right_imgzone2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/title_center_zone"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="12dp">
        <!-- 右侧端图片区域，须根据点击区域事件(click, touch down, touch cancel)更新背景图 -->
        <RelativeLayout
            android:id="@+id/title_right_imgzone1"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="fill_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/title_right_imgzone2_img1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/title_right_imgzone2_dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/title_right_imgzone2_img1"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@id/title_right_imgzone2_img1"
                android:visibility="visible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_right_imgzone2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/title_right_imgzone2_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/title_right_imgzone2_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/title_right_imgzone2_img"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@id/title_right_imgzone2_img"
                android:visibility="gone"/>
        </RelativeLayout>

        <!-- 右侧文字区域 -->

        <TextView
            android:id="@+id/title_right_imgzone2_notify"
            style="@style/rim_titlebar_right_imgzone2_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 标题栏下方横线 -->

    <ImageView
        android:id="@+id/title_bottom_seperator"
        style="@style/rim_titlebar_bottom_seperator"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>