<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:fitsSystemWindows="true"
            android:clipToPadding="false">
    <include layout="@layout/layout_sapi_liveness_title_bar"
        android:id="@+id/title"/>


        <android.support.v4.view.ViewPager
            android:layout_below="@id/title"
            android:id="@+id/rim_face_video_guide_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rim_face_guide_indicator_1"
                android:background="@drawable/rim_face_indicator_circle_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/rim_base_white"
                android:text="1"/>
            <TextView
                android:layout_marginLeft="18dp"
                android:id="@+id/rim_face_guide_indicator_2"
                android:layout_width="wrap_content"
                android:background="@drawable/rim_face_indicator_circle_normal"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/rim_base_white"
                android:text="2"/>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_bottom"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_start_photo"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/sapi_liveness_btn_height"
                android:background="@drawable/rim_face_round_btn_shape"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="@string/sapi_liveness_guide_start_recog"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>