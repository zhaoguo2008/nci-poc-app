<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rim_face_guide_video_page2">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rim_face_video_guide_indicator2_title"
                android:textColor="#333333"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sapi_liveness_guide_bottom_tip_margin_top"
                android:id="@+id/rim_face_video_guide_indicator2_title_hint"
                android:text="@string/rim_face_video_guide_indicator2_title_hint"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="#666666"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rim_face_video_guide_indicator_shadow"
            android:id="@+id/rim_face_guide_indicator2_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="35dp"
                android:background="@drawable/rim_face_loading_indicator2_corner"
                android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/sapi_liveness_guide_title_tip_margin_top"
                    android:id="@+id/rim_face_guide_indicator2_content"
                    android:text="本人承诺，按时偿还贷款本息，并知晓还款义务，且不受机构培训效果、培训时长、培训机构承诺等因素影响；我清楚，如未能及时还款，将影响我的信用记录并承担相应法律责任。"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#5D667A"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center|left"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rim_face_loading_indicator2_voice"/>
                    <TextView
                        android:layout_marginLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rim_face_video_guide_voice_hint"
                        android:textSize="12sp"
                        android:textColor="#AEC2D6"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_bottom"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/btn_start_photo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/sapi_liveness_btn_height"
                android:background="@drawable/rim_face_round_btn_shape"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="@string/sapi_liveness_video_guide_start_recog"/>
        </LinearLayout>
    </LinearLayout>
